<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mentalhealthtracker">

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MentalHealthTracker">
        <activity
            android:name=".Intro"
            android:exported="false" />
        <activity
            android:name=".Settings"
            android:exported="false" />
        <activity
            android:name=".PaymentHistory"
            android:exported="false" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Notification"
            android:exported="false" />
        <activity
            android:name=".RequestAppointment"
            android:exported="false" />
        <activity android:name=".Loader" />
        <activity android:name=".TrackHistory" />
        <activity android:name=".DocList" />
        <activity android:name=".DocProfile" />
        <activity android:name=".Chat" />
        <activity android:name=".Reads" />
        <activity android:name=".Analysis" />
        <activity android:name=".CreateAccount" />
        <activity android:name=".Dashboard" />
        <activity android:name=".ManageOtp" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.MentalHealthTracker.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>